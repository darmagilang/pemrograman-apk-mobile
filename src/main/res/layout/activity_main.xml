<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:text="         BERITA HARI INI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="154dp"
        android:layout_marginBottom="192dp"
        android:layout_marginEnd="99dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/suriah" />

    <Button
        android:id="@+id/button"
        android:layout_width="201dp"
        android:layout_height="47dp"
        android:text="BACA SELENGKAPNYA"
        android:onClick="bold"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="213dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="197dp"
        android:layout_height="84dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:text="Kelompok oposisi Suriah yang bertahan di wilayah Idlib, barat laut Suriah, pada Sabtu kemarin mengumumkan bahwa mereka telah mulai menarik senjata berat dari garis depan. Hal ini sesuai dengan kesepakatan antara Turki dan Rusia"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="123dp"
        android:layout_height="107dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ranta" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="196dp"
        android:layout_height="57dp"
        android:layout_marginTop="132dp"
        android:text="Prabowo mengaku awalnya merasa terkejut dan bertanya-tanya motivasi Ratna Sarumpaet melakukan kebohongan itu"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="154dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="196dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:text="BACA SELENGKAPNYA"
        android:OnClick="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="154dp" />
</android.support.constraint.ConstraintLayout>